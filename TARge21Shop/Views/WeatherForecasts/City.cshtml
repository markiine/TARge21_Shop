@model TARge21Shop.Models.Weather.WeatherViewModel

<h1>City</h1>

<div class="container">
    <h2>Search the forecast for selected city</h2>
    <hr />
    <dl class="row">

        <div class="form-group row">
            <label asp-for="Date" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Date)
        </div>

        <div class="form-group row">
        <label asp-for="EpochDate" class="col-sm-2 col-form-label"></label>
        @Html.DisplayFor(model => model.EpochDate)
        </div>

        <div class="form-group row">
        <label asp-for="Severity" class="col-sm-2 col-form-label"></label>
        @Html.DisplayFor(model => model.Severity)
        </div>

        <div class="form-group row">
            <label asp-for="Text" class="col-sm-2 col-form-label"></label>
        @Html.DisplayFor(model => model.Text)
        </div>

        <div class="form-group row">
            <label asp-for="Category" class="col-sm-2 col-form-label"></label>
        @Html.DisplayFor(model => model.Category)
        </div>

        <div class="form-group row">
            <label asp-for="MobileLink" class="col-sm-2 col-form-label"></label>
        @Html.DisplayFor(model => model.MobileLink)
        </div>

        <div class="form-group row">
            <label asp-for="Link" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Link)
        </div>

        <div class="form-group row">
        <label asp-for="Temperature.Maximum.Value" class="col-sm-2 col-form-label"></label>
        @Html.DisplayFor(model => model.Temperature.Maximum.Value)
        </div>

        <div class="form-group row">
            <label asp-for="Temperature.Maximum.Unit" class="col-sm-2 col-form-label"></label>
        @Html.DisplayFor(model => model.Temperature.Maximum.Unit)
        </div>

        <div class="form-group row">
        <label asp-for="Temperature.Maximum.UnitType" class="col-sm-2 col-form-label"></label>
        @Html.DisplayFor(model => model.Temperature.Maximum.UnitType)
        </div>

        <div class="form-group row">
        <label asp-for="Temperature.Minimum.Value" class="col-sm-2 col-form-label"></label>
        @Html.DisplayFor(model => model.Temperature.Minimum.Value)
        </div>

        <div class="form-group row">
        <label asp-for="Temperature.Minimum.Unit" class="col-sm-2 col-form-label"></label>
