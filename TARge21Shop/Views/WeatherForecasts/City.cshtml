        <div class="form-group row">
        <label asp-for="Temperature.Minimum.UnitType" class="col-sm-2 col-form-label"></label>
        @Html.DisplayFor(model => model.Temperature.Minimum.UnitType)
        </div>

        <div class="form-group row">
            <label asp-for="Day.Icon" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Day.Icon)
        </div>

        <div class="form-group row">
            <label asp-for="Day.IconPhrase" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Day.IconPhrase)
        </div>

        <div class="form-group row">
            <label asp-for="Day.HasPrecipitation" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Day.HasPrecipitation)
        </div>

        <div class="form-group row">
            <label asp-for="Day.PrecipitationType" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Day.PrecipitationType)
        </div>        
        
