        <div class="form-group row">
            <label asp-for="Night.PrecipitationType" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Night.PrecipitationType)
        </div>

        <div class="form-group row">
            <label asp-for="Night.PrecipitationIntensity" class="col-sm-2 col-form-label"></label>
