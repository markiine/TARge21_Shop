@model TARge21Shop.Models.Weather.OpenWeatherViewModel

<h1>Kuusalu</h1>

<div class="container">
    <h2>Forecast for the selected city</h2>
    <hr />
    <dl class="row">
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label">City Name</label>
            @Html.DisplayFor(model => model.Name)
        </div>
        <hr />

        <div class="form-group row">
            <label asp-for="Main.Temp" class="col-sm-2 col-form-label">Temperature</label>
            @Html.DisplayFor(model => model.Main.Temp)
        </div>
        <hr />

        <div class="form-group row">
            <label asp-for="Main.FeelsLike" class="col-sm-2 col-form-label">Feels Like</label>
            @Html.DisplayFor(model => model.Main.FeelsLike)
        </div>
        <hr />

        <div class="form-group row">
            <label asp-for="Main.Humidity" class="col-sm-2 col-form-label">Humidity</label>
            @Html.DisplayFor(model => model.Main.Humidity)
        </div>
        <hr />

        <div class="form-group row">
            <label asp-for="Main.Pressure" class="col-sm-2 col-form-label">Pressure</label>
            @Html.DisplayFor(model => model.Main.Pressure)
        </div>
        <hr />

        <div class="form-group row">
            <label asp-for="Wind.WindSpeed" class="col-sm-2 col-form-label">Wind Speed</label>
            @Html.DisplayFor(model => model.Wind.WindSpeed)
        </div>
        <hr />

        @*<div class="form-group row">
            <label asp-for="WeatherCondition" class="col-sm-2 col-form-label">Weather Condition</label>
            @Html.DisplayFor(model => model.WeatherCondition)
        </div>*@
    </dl>
</div>
