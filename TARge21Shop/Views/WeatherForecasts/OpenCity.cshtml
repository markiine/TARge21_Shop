@model TARge21Shop.Models.Weather.OpenWeatherViewModel

<h1>Kuusalu</h1>

<div class="container">
    <h2>Forecast for the selected city</h2>
    <hr />
    <dl class="row">
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label">City</label>
            @Html.DisplayFor(model => model.Name) 
        </div>
        <hr />

        <div class="form-group row">
            <label asp-for="Main.Temp" class="col-sm-2 col-form-label">Temperature</label>
            @Html.DisplayFor(model => model.Main.Temp) &#8451;
        </div>
        <hr />

        <div class="form-group row">
            <label asp-for="Main.FeelsLike" class="col-sm-2 col-form-label">Temp Feels Like</label>
            @Html.DisplayFor(model => model.Main.FeelsLike) &#8451;
        </div>
        <hr />

        <div class="form-group row">
            <label asp-for="Main.Humidity" class="col-sm-2 col-form-label">Humidity</label>
            @Html.DisplayFor(model => model.Main.Humidity) %
        </div>
        <hr />

        <div class="form-group row">
            <label asp-for="Main.Pressure" class="col-sm-2 col-form-label">Pressure</label>
            @Html.DisplayFor(model => model.Main.Pressure) Hpa
        </div>
        <hr />

        <div class="form-group row">
            <label asp-for="Wind.WindSpeed" class="col-sm-2 col-form-label">Wind Speed</label>
            @Html.DisplayFor(model => model.Wind.WindSpeed) km/h
        </div>
        <hr />

        <div class="form-group row">
            <label asp-for="Weather.Main" class="col-sm-2 col-form-label">Weather Condition</label>
            @Html.DisplayFor(model => model.Weather.Main)
        </div>
    </dl>
</div>
