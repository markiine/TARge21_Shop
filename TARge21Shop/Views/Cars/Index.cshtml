@model IEnumerable<TARge21Shop.Models.Car.CarIndexViewModel>

@{
    int rowNumber = 1;
}

<div class="h1">
    Cars
</div>

<div>
    <a asp-action="create" asp-controller="cars" type="submit" class="btn btn-outline-dark">Create</a>
</div>

<form method="post">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">Brand</th>
                <th scope="col">Type</th>
                <th scope="col">Color</th>
                <th scope="col">Price</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var car in Model)
            {
                <tr>
                    <td>@rowNumber</td>
                    <td>@car.Brand</td>
                    <td>@car.Type</td>
                    <td>@car.Color</td>
                    <td>@car.Price</td>
                    <td>
                        <a asp-action="details" asp-controller="cars" asp-route-id="@car.Id" class="btn btn-info">Details</a>
                        <a asp-action="update" asp-controller="cars" asp-route-id="@car.Id" class="btn btn-primary">Update</a>
                        <a asp-action="delete" asp-controller="cars" asp-route-id="@car.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
                rowNumber++;
            }
        </tbody>
    </table>
</form>